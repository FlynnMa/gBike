<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_mainview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@color/Lavender"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context=".ActivityMainView" >

    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="10"
	    android:id="@+id/loading_container"
	    android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_wheel"
 	        android:layout_width="10dp"
   	        android:layout_height="10dp"
   	        android:layout_centerInParent="true"
   	        android:scaleType="fitCenter"
            android:src="@drawable/ic_wheel" />

        <ImageView
            android:id="@+id/img_wheel_right"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignBottom="@+id/img_wheel"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/img_wheel"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_wheel3" />

        <ImageView
            android:id="@+id/img_wheel_left"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignBottom="@+id/img_wheel"
            android:layout_marginRight="80dp"
            android:layout_toLeftOf="@+id/img_wheel"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_wheel1" />
                
	</RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/status"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:text="@string/copyright" />
	</RelativeLayout>
</LinearLayout>

